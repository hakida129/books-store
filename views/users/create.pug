
extends ../layouts/common
block content


  h2 Create a new user

  if errors
    each error in errors
      .alert.alert-danger= error

  form(action="/users/create" method="POST")
    .form-group
      label(for="name") Name
      input.form-control(type="text" id="name" name="name" value= values ? values.name : "")
    .form-group
      label(for="phone") Phone
      input.form-control(type="text" id="phone" name="phone" value= values ? values.phone : "")

    .form-group
      label(for="email") Email
      input.form-control(type="text" id="email" name="email" value= values ? values.email : "")

    .form-group
      label(for="password") Password
      input.form-control(type="password" id="password" name="password" value= values ? values.password : "")

    button.btn.btn-primary.mt-2 Create
