
extends ../layouts/common
block content


  h2.mt-5.text-center LIST BOOKS
  a.btn.btn-primary(href="/books/create") Create a new book

  table.table.table-striped.mt-3
    tr.text-center
      th Cover
      th Title
      th Description
      th Actions
    each book in books
      tr  
        td
          img(src= book.coverUrl width=32)
        td= book.title
        td= book.description
        td
          a.btn.btn-secondary.ml-2(href="/books/view/" + book.id) View
          a.btn.btn-warning.ml-2(href="/books/update/" + book.id) Update
          a.btn.btn-danger.ml-2(href="/books/delete/" + book.id) Delete